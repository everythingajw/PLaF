{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Call-by-need",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.call-by-need",
					"match": "\\b(if|then|else|caseT)\\b"
				},
				{
					"name": "keyword.storage.call-by-need",
					"match": "\\b(let|letrec|pair|unpair|untuple|set)\\b"
				},
				{
					"name": "keyword.other.call-by-need",
					"match": "\\b(begin|end|in|of|proc)\\b"
				}
			]
		},
		"constants": {
			"patterns":[
				{
					"name": "constant.numeric.call-by-need",
					"match": "-?[0-9]+"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "support.function.call-by-need",
					"match": "\\b(((zero\\?|empty\\?)\\W)|((debug|fst|snd|cons|hd|tl|emptylist|node|emptytree)\\b))"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.call-by-need",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.call-by-need",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.cbneed"
}