{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Explicit-refs",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.explicit-refs",
					"match": "\\b(if|then|else)\\b"
				},
				{
					"name": "keyword.storage.explicit-refs",
					"match": "\\b(let|letrec|newref|setref|deref)\\b"
				},
				{
					"name": "keyword.other.explicit-refs",
					"match": "\\b(begin|end|in|proc|untuple|caseT)\\b"
				}
			]
		},
		"constants": {
			"patterns":[
				{
					"name": "constant.numeric.explicit-refs",
					"match": "-?[0-9]+"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "support.function.explicit-refs",
					"match": "\\b(((empty\\?|zero\\?)\\W)|((hd|tl|cons)\\b))"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.explicit-refs",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.explicit-refs",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.eref"
}