{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Proc",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.proc",
					"match": "\\b(if|then|else)\\b"
				},
				{
					"name": "keyword.storage.proc",
					"match": "\\b(let|pair|unpair|untuple)\\b"
				},
				{
					"name": "keyword.other.proc",
					"match": "\\b(in|proc)\\b"
				}
			]
		},
		"constants": {
			"patterns":[
				{
					"name": "constant.numeric.proc",
					"match": "-?[0-9]+"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "support.function.proc",
					"match": "\\b(((zero\\?)\\W)|((debug|fst|snd)\\b))"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.proc",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.proc",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.proc"
}