{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Sool",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.sool",
					"match": "\\b(if|then|else|caseT)\\b"
				},
				{
					"name": "keyword.storage.sool",
					"match": "\\b(let|letrec|pair|unpair|untuple|set|new|class|extends|field|method)\\b"
				},
				{
					"name": "keyword.other.sool",
					"match": "\\b(begin|end|in|of|proc|send)\\b"
				}
			]
		},
		"constants": {
			"patterns":[
				{
					"name": "constant.numeric.sool",
					"match": "-?[0-9]+"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "support.function.sool",
					"match": "\\b(((zero\\?|empty\\?)\\W)|((debug|fst|snd|cons|hd|tl|emptylist|node|emptytree|mklist)\\b))"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "support.variable.sool",
					"match": "\\b(self|super)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.sool",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.sool",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.sool"
}